{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/chat.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/supabase",
      "dest": "/api/supabase.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/auth",
      "dest": "/api/auth.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
